<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:focusable="true"
		android:focusableInTouchMode="true"
	>
	<Button
		android:id="@+id/goToDefaultLanguages"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Default Languages"
		android:onClick="onDefaultLanguagesButton"
	/>
	<Button
		android:id="@+id/goToSyncSettings"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Sync Settings"
		android:onClick="onSyncSettingsButton"
	/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/usageField"
		android:text="Default Sensitivity:"
		android:textSize="15sp"
	/>
	<SeekBar
		style="@android:style/Widget.ProgressBar.Horizontal"
		android:id="@+id/SensitivitySlider"
		android:layout_width="match_parent"
		android:layout_height="32dp"
		android:maxHeight="10dp"
	/>
</LinearLayout>
