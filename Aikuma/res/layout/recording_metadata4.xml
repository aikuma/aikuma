<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:focusable="true"
		android:focusableInTouchMode="true"
	>
	
    <ImageButton
		android:id="@+id/okButton4"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:scaleType="centerInside"
		android:src="@drawable/ok_48"
		android:layout_alignParentBottom="true"
		android:onClick="onOkButtonPressed"
	/>
    
    <FrameLayout
	    android:id="@+id/ListenFragment"
	    android:layout_marginTop="15sp"
		android:layout_marginBottom="15sp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />
    
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/okButton4"
		android:layout_below="@id/ListenFragment"
		>
		
		
		<VideoView
	    	android:id="@+id/videoView"
	    	android:layout_width="wrap_content"
	    	android:layout_height="0dp"
	    	android:layout_weight="2"
	    />
		
		
		<TextView
	    	android:id="@+id/description"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
	    	android:text="test" />
		
		<LinearLayout
		    android:id="@+id/userImagesAndAddUserButton"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>

		<TextView
		    android:id="@+id/languageView"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10dp"
		    />
		
	</LinearLayout>
	
</RelativeLayout>