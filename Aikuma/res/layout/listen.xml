	<ImageButton
			android:id="@+id/respeaking"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:onClick="onRespeakingButton"
			android:src="@drawable/exchange_48"
			android:scaleType="centerInside"
			android:layout_alignParentBottom="true"
	/>

	<View
		android:id="@+id/topLine"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="#999999"
		android:layout_margin="5dp"
		android:layout_below="@id/listenFragment"
	/>
	<TextView
		android:id="@+id/transcriptView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/topLine"
		android:text=""
	/>
	<View
		android:id="@+id/middleLine"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="#999999"
		android:layout_below="@id/transcriptView"
		android:layout_margin="5dp"
	/>
	<TextView
		android:id="@+id/transcriptView2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/middleLine"
		android:text=""
		android:textStyle="italic"
	/>
	<View
	    android:id="@+id/bottomLine"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:background="#999999"
		android:layout_below="@id/transcriptView2"
		android:layout_margin="5dp"
	/>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_below="@id/bottomLine"
	    android:layout_above="@id/respeaking"
	    >
	    <VideoView
	    	android:id="@+id/videoView"
	    	android:layout_width="wrap_content"
	    	android:layout_height="0dp"
	    	android:layout_weight="2"
	   		android:layout_gravity="center"
	     	/>
	    <ListView
	    	android:id="@+id/relatedCommentaries"
	    	android:layout_width="fill_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="1"
	    	/>
	</LinearLayout>

