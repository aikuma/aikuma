	<ListView
	    android:id="@+id/selectedOriginal"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    />
	
	<FrameLayout
	    android:id="@+id/listenFragment"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/selectedOriginal" />
	
	
	
	
