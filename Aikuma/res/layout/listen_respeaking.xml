<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	>

	<include 
	    android:id="@+id/selectedOriginal"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    layout="@layout/recording_list_item"/>
	
	<FrameLayout
	    android:id="@+id/recordingPlayerInterface"
	    android:layout_below="@id/selectedOriginal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />
	

	<include 
	    android:id="@+id/selectedRespeaking"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_below="@id/recordingPlayerInterface"
	    layout="@layout/recording_list_item"/>
	
	<FrameLayout
	    android:id="@+id/respeakingPlayerInterface"
	    android:layout_below="@id/selectedRespeaking"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />
