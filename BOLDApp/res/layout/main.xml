<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
>
	<LinearLayout
		android:id="@+id/Frame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="3"
	>
		<!--
		<ImageButton
			android:id="@+id/Back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="centerInside"
			android:src="@drawable/back"
		/>
		-->
		<TextView
			android:id="@+id/UserName"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:scaleType="centerInside"
			android:layout_alignParentLeft="true"
			android:textSize="30sp"
		/>
		<ImageButton
			android:id="@+id/UserIcon"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:scaleType="centerInside"
			android:src="@drawable/unknown_user"
			android:layout_alignParentRight="true"
			android:onClick="goToUserSelection"
		/>
		<!--
		<TextView
			android:id="@+id/UserName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:text="User Name"
			android:textSize="20sp"
		/>
		-->
	</LinearLayout>
	<LinearLayout
		android:id="@+id/MainOptions"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
	>
		<LinearLayout
			android:id="@+id/MainOptionsTop"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
		>
			<ImageButton
				android:id="@+id/goToRecord"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/main_record"
				android:onClick="goToRecord"
			/>
			<ImageButton
				android:id="@+id/goToRespeak"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/main_respeak"
				android:onClick="goToRespeak"
			/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/MainOptionsBottom"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
		>
			<ImageButton
				android:id="@+id/goToListen"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/main_listen"
				android:onClick="goToListen"
			/>
			<ImageButton
				android:id="@+id/goToTranslate"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scaleType="centerInside"
				android:src="@drawable/main_translate"
				android:onClick="goToTranslate"
			/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
