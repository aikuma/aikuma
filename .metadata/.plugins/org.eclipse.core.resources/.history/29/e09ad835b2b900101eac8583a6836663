/*
 * The application needs to have the permission to write to external storage
 * if the output file is written to the external storage, and also the
 * permission to record audio. These permissions must be set in the
 * application's AndroidManifest.xml file, with something like:
 *
 * <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
 * <uses-permission android:name="android.permission.RECORD_AUDIO" />
 *
 */
package au.edu.melbuni.boldapp;

import java.io.IOException;

import android.media.MediaPlayer;
import android.media.MediaRecorder;
import android.os.Environment;
import android.util.Log;


public class Recorder
{
    private static final String LOG_TAG = "Recorder";

    private MediaRecorder mRecorder = new MediaRecorder();
    private MediaPlayer   mPlayer = new MediaPlayer();
    
    private boolean playing = false;
    private boolean recording = false;
    
    public Recorder() {
        mRecorder.setOutputFormat(MediaRecorder.OutputFormat.THREE_GPP); // TODO Format?
        mRecorder.setAudioEncoder(MediaRecorder.AudioEncoder.AMR_NB); // TODO Uncompressed?
        mRecorder.setAudioSource(MediaRecorder.AudioSource.MIC);
	}
    
    protected String generateFullFilename(String relativeFilename) {
    	String fileName = Environment.getExternalStorageDirectory().getAbsolutePath();
    	fileName += "/";
    	fileName += relativeFilename;
    	fileName += ".3gp";
    	return fileName;
    }

    public void startPlaying(String fileName) {
    	if (playing) {
    		return;
    	}
    	playing = true;
        try {
            mPlayer.setDataSource(generateFullFilename(fileName));
            mPlayer.prepare();
            mPlayer.start();
            System.out.println("Playing");
        } catch (IOException e) {
            Log.e(LOG_TAG, "Recorder#prepare() failed");
        }
    }

    public void stopPlaying() {
    	if (!playing) {
    		return;
    	}
    	mPlayer.reset();
        playing = false;
        System.out.println("Stopped Playing");
    }

    public void startRecording(String fileName) {
    	if (recording) {
    		return;
    	}
    	recording = true;
        mRecorder.setOutputFile(generateFullFilename(fileName));
        try {
            mRecorder.prepare();
        } catch (IOException e) {
            Log.e(LOG_TAG, "Recorder#prepare() failed");
        }

        mRecorder.start();
        System.out.println("Recording");
    }

    public void stopRecording() {
    	if (!recording) {
    		return;
    	}
        mRecorder.stop();
        recording = false;
        System.out.println("Stopped Recording");
    }
    
//    public void pause() {
//        if (mRecorder != null) {
//            mRecorder.release();
//            mRecorder = null;
//        }
//
//        if (mPlayer != null) {
//            mPlayer.release();
//            mPlayer = null;
//        }
//    }
}